<article>
  <a href="/dashboard"> &larr; Back to the dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <h3>Title</h3>
      <input name="post-title" type="text" value="{{post.title}}" />
      </br>
      <h3>Content</h3>
      <textarea id="content" name="content" type="text"> {{post.content}}</textarea>
    </div>
    <div>
      Posted by you on {{format_date post.date_created}}
      {{!-- |
      <a href="/post/{{post.id}}">{{post.comments.length}} --}}
      
       {{!-- {{format_plural "comment" post.comments.length}} --}}
       
       </a>
    </div>
    <button type="submit">Update post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>




<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
